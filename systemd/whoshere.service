[Unit]
Description=Whoshere Daemon
After=syslog.target network-online.target

[Service]
User=root
Group=root

PIDFile=/var/run/whoshere/whoshere.pid

ExecStartPre=-mkdir -p /var/run/whoshere
ExecStartPre=-mkdir -p /var/log/whoshere
Type=simple
ExecStart=/usr/local/bin/whoshere -r -v
TimeoutStopSec=10
RestartSec=5s
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
